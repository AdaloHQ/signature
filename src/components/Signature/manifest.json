{
  "displayName": "Signature Pad",
  "defaultWidth": 343,
  "defaultHeight": 229,
  "components": "./index.js",
  "icon": "./example-thumbnail.png",
  "props": [
    {
      "name": "setStyles",
      "displayName": "Style",
      "type": "number",
      "default": 0,
      "control": {
        "type": "menu",
        "options": [
          {"label": "Light", "value": 0},
          {"label": "Gray", "value": 1},
          {"label": "Dark", "value": 2},
          {"label": "Custom", "value": 3}
        ]
      }
    },
    {
      "name": "backgroundColor",
      "displayName": "Background Color",
      "type": "color",
      "default": "@background",
      "enabled": {
        "setStyles": 3
      }
    },
    {
      "name": "borderColor",
      "displayName": "Border Color",
      "type": "color",
      "default": "#E0E0E0",
      "enabled": {
        "setStyles": 3
      }
    },
    {
      "name": "penColor",
      "displayName": "Pen Color",
      "type": "color",
      "default": "@text",
      "enabled": {
        "setStyles": 3
      }
    }
  ],
  "childComponents": [
    {
      "name": "buttons",
      "displayName": "Buttons",
      "props": [
        {
          "name": "clearText",
          "displayName": "Clear Button Text",
          "type": "text",
          "default": "CLEAR",
          "styles": {
            "fontFamily": "@body",
            "fontWeight": 600,
            "color": "@primary"
          }
        },
        {
          "name": "clearButtonColor",
          "displayName": "Clear Button Background Color",
          "type": "color",
          "default": "@background"
        },
        {
          "name": "clearBorder",
          "displayName": "Clear Button Border",
          "type": "boolean",
          "default": true
        },
        {
          "name": "clearBorderColor",
          "displayName": "Clear Button Border Color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "clearBorder": true
          }
        },
        {
          "name": "clearRounding",
          "displayName": "Clear Button Rounding",
          "type": "number",
          "default": 4,
          "control": {"type": "slider", "max": 20, "min": 0}
        },
        {
          "name": "saveText",
          "displayName": "Save Button Text",
          "type": "text",
          "default": "SAVE",
          "styles": {
            "fontFamily": "@body",
            "fontWeight": 600,
            "color": "#FFFFFF"
          }
        },
        {
          "name": "saveButtonColor",
          "displayName": "Save Button Background Color",
          "type": "color",
          "default": "@primary"
        },
        {
          "name": "saveBorder",
          "displayName": "Save Button Border",
          "type": "boolean",
          "default": true
        },
        {
          "name": "saveBorderColor",
          "displayName": "Save Button Border Color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "saveBorder": true
          }
        },
        {
          "name": "saveRounding",
          "displayName": "Save Button Rounding",
          "type": "number",
          "default": 4,
          "control": {"type": "slider", "max": 20, "min": 0}
        },
        {
          "name": "action",
          "displayName": "Save Actions",
          "type": "action",
          "arguments": [
            {
              "type": "text",
              "displayName": "Signature"
            }
          ]
        }
      ]
    }
  ]
}