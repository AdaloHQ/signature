{
  "displayName": "Signature",
  "defaultWidth": 343,
  "defaultHeight": 205,
  "components": "./index.js",
  "icon": "./example-thumbnail.png",
  "props": [
    {
      "name": "saveText",
      "displayName": "Save Button Text",
      "type": "text",
      "default": "Save",
      "styles": {
        "fontFamily": "@body",
        "fontWeight": 200,
        "color": "#FFFFFF"
      }
    },
    {
      "name": "clearText",
      "displayName": "Clear Button Text",
      "type": "text",
      "default": "Clear",
      "styles": {
        "fontFamily": "@body",
        "fontWeight": 200,
        "color": "#FFFFFF"
      }
    },
    {
      "name": "setStyles",
      "displayName": "Styles",
      "type": "number",
      "default": 0,
      "control": {
        "type": "menu",
        "options": [
          {"label": "Light", "value": 0},
          {"label": "Classic", "value": 1},
          {"label": "Dark", "value": 2},
          {"label": "Custom", "value": 3}
        ]
      }
    },
    {
      "name": "primaryColor",
      "displayName": "Secret Color",
      "type": "color",
      "default": "@primary",
      "enabled": {
        "setStyles": 4
      }
    },
    {
      "name": "backgroundColor",
      "displayName": "Background Color",
      "type": "color",
      "default": "@background",
      "enabled": {
        "setStyles": 3
      }
    },
    {
      "name": "penColor",
      "displayName": "Pen Color",
      "type": "color",
      "default": "@text",
      "enabled": {
        "setStyles": 3
      }
    },
    {
      "name": "saveButtonColor",
      "displayName": "Save Button Background Color",
      "type": "color",
      "default": "@primary",
      "enabled": {
        "setStyles": 3
      }
    },
    {
      "name": "clearButtonColor",
      "displayName": "Clear Button Background Color",
      "type": "color",
      "default": "@primary",
      "enabled": {
        "setStyles": 3
      }
    },
    {
      "name": "borderColor",
      "displayName": "Border Color",
      "type": "color",
      "default": "#E0E0E0",
      "enabled": {
        "setStyles": 3
      }
    },
    {
      "name": "action",
      "displayName": "Save Actions",
      "type": "action",
      "arguments": [
        {
          "type": "text",
          "displayName": "Signature"
        }
      ]
    }
  ]
}